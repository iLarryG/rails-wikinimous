<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <ul style="list-style: none; margin-left:-40px;">
        <% @articles.each do |article| %>
        <li>
          <h3 style="color: blue;"><%= link_to article.title, article_path(article) %></h3>
          <p><%= article.content %></p>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>